@page "/dice"

<PageHeader Title="Dice" Header="Dice" SubHeader="Manage your Dice." />

<EntityTable @ref="_table" TEntity="DiceDto" TId="Guid" TRequest="UpdateDiceCommand" Context="@Context">
    <EditFormContent>
        @if (!Context.AddEditModal.IsCreate)
        {
            <MudItem xs="12" md="12">
                <MudTextField Value="context.Id" Underline=false ReadOnly Label="Dice Id" />
            </MudItem>
        }
        <MudItem xs="12" md="6">
            <MudTextField Label="Title" For="@(() => context.Title)" @bind-Value="context.Title" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField Label="Slug" For="@(() => context.Slug)" @bind-Value="context.Slug" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudCheckBox Label="Public" For="@(() => context.IsPubliclyPlayable)" @bind-Value="context.IsPubliclyPlayable" />
        </MudItem>
         <MudItem xs="6" md="3">
            <MudNumericField Label="Min Amount" For="@(() => context.MinimumPlayAmount)" @bind-Value="context.MinimumPlayAmount" />
        </MudItem>
        <MudItem xs="6" md="3">
            <MudNumericField Label="Max Amount" For="@(() => context.MaximumPlayAmount)" @bind-Value="context.MaximumPlayAmount" />
        </MudItem>
        @if (context.Faces is not null)
        {
            <MudItem xs="12" md="12">
                <FacesDataGrid Faces="context.Faces" />
            </MudItem>
        }
    </EditFormContent>

</EntityTable>